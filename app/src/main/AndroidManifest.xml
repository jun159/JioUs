<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jious.jious">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.StartActivity"
            android:label="@null"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoToolBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.LoginActivity"
            android:label="@null"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".authentication.PostalActivity"
            android:label="@null"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".main.NavigationActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoToolBar"/>
        <activity
            android:name=".profile.ProfileActivity"
            android:label="My Profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".jious.MatchResultActivity"
            android:label="Match Results"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".jious.JioUsActivity"
            android:label="Jio Us"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.EventActivity"
            android:label="Toa Payoh Football Match"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.MatchActivity"
            android:label="Toa Payoh Football Match"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".jionow.JioNowActivity"
            android:label="Jio Now"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".jionow.ActivesgActivity"
            android:label="Booking"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
        <activity
            android:name=".jionow.WebsiteActivity"
            android:label="Booking"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:launchMode="singleTop" />
    </application>

</manifest>